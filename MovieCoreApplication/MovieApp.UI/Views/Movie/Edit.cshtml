@model MovieApp.Entity.MovieModel;
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Movie</h1>
<hr />

<form method="post">
    <div class="form-group">
        <label for="MovieId">Movie Id</label>
        <input type="text" class="form-control" asp-for="MovieId" readonly />
    </div>
    <div class="form-group">
        <label for="MovieName">Movie Name</label>
        <input type="text" class="form-control" asp-for="MovieName" />
    </div>
    <div class="form-group">
        <label for="ActorName">Actor Name</label>
        <input type="text" class="form-control" asp-for="ActorName" />
    </div>
    <div class="form-group">
        <label for="DirectorName">Director Name</label>
        <input type="text" class="form-control" asp-for="DirectorName" />
    </div>
    <div class="form-group">
        <label for="ActressName">Actress Name</label>
        <input type="text" class="form-control" asp-for="ActressName" />
    </div>
    <div class="form-group">
        <label for="Price">Price</label>
        <input type="text" class="form-control" asp-for="Price" />
    </div>
    <div>
        <input type="submit" class="btn btn-primary" value="Update Movie" />
    </div>
    <hr />
    @if (ViewBag.status == "OK")
    {
        <div class="alert alert-success">@ViewBag.message</div>
    }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">@ViewBag.message</div>
    }
    <hr />
    <a asp-controller="Movie" asp-action="ShowMovieDetails">Show Movie Details</a>
    <hr />
</form>
