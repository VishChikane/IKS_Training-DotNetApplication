@model IEnumerable<MovieApp.Entity.MovieModel>;
@{
    ViewData["Title"] = "ShowMovieDetails";
}

<h1>ShowMovieDetails</h1>
<hr />

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Check Box
            <th>Movie Id
            <th>Movie Name
            <th>Actor Name
            <th>Director Name
            <th>Actress Name
            <th>Price
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><input type="checkbox" /></td>
                <td>@item.MovieId</td>
                <td>@item.MovieName</td>
                <td>@item.ActorName</td>
                <td>@item.DirectorName</td>
                <td>@item.ActressName</td>
                <td>@item.Price</td>
            </tr>
        }
    </tbody>
</table>
