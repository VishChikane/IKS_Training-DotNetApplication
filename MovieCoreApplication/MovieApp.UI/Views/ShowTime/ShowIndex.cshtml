@model IEnumerable<MovieApp.Entity.MovieShowTime>
@{
    ViewData["Title"] = "ShowIndex";
}

<h1>Show Index</h1>
<hr />

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ShowId</th>
            <th>MovieId</th>
            <th>TheatreId</th>
            <th>ShowTime</th>
            <th>Date</th>
            <th>Edit</th>
            <th>delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ShowId</td>
                <td>@item.MovieId</td>
                <td>@item.TheatreId</td>
                <td>@item.ShowTime</td>
                <td>@item.Date</td>
                <td><a asp-controller="ShowTime" asp-action="EditShow" asp-route-ShowId=@item.ShowId>Edit</a></td>
                <td><a asp-controller="ShowTime" asp-action="DeleteShow" asp-route-ShowId=@item.ShowId>Delete</a></td>
            </tr>
        }
    </tbody>
</table>
<hr />
<a asp-controller="ShowTime" asp-action="InsertMovieShowTime">Add ShowTime</a>
<hr />