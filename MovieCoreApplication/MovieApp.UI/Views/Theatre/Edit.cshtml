@model MovieApp.Entity.TheatreModel;
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Theatre</h1>
<hr />

<form method="post">
    <div class="form-group">
        <label for="ThreatreId">ThreatreId</label>
        <input type="text" class="form-control" asp-for="ThreatreId" readonly/>
    </div>
    <div class="form-group">
        <label for="ThreatreName">Theatre Name</label>
        <input type="text" class="form-control" asp-for="ThreatreName" />
    </div>
    <div class="form-group">
        <label for="ThreatrePlayName">Threatre Play Name</label>
        <input type="text" class="form-control" asp-for="ThreatrePlayName" />
    </div>
    <div class="form-group">
        <label for="ThreatreCapacity">Threatre Capacity</label>
        <input type="text" class="form-control" asp-for="ThreatreCapacity" />
    </div>
    <div class="form-group">
        <label for="Price">Price</label>
        <input type="text" class="form-control" asp-for="Price" />
    </div>
    <div>
        <input type="submit" class="btn btn-primary" value="Update Theatre" />
    </div>
    <hr />
    @if (ViewBag.status == "OK")
    {
        <div class="alert alert-success">@ViewBag.message</div>
    }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">@ViewBag.message</div>
    }
    <hr />
    <a asp-controller="Theatre" asp-action="ShowTheatreDetails">Show Theatre Details</a>
    <hr />
</form>
