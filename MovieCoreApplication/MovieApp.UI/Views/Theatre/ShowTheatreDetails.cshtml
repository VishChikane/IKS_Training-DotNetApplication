@model IEnumerable<MovieApp.Entity.TheatreModel>;
@{
    ViewData["Title"] = "ShowTheatreDetails";
}

<h1>ShowTheatreDetails</h1>
<hr />

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Check Box
            <th>Theatre Id
            <th>Theatre Name
            <th>Theatre Play
            <th>Thetare Capacity
            <th>Price
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><input type="checkbox" /></td>
                <td>@item.ThreatreId</td>
                <td>@item.ThreatreName</td>
                <td>@item.ThreatrePlayName</td>
                <td>@item.ThreatreCapacity</td>
                <td>@item.Price</td>
            </tr>
        }
    </tbody>
</table>