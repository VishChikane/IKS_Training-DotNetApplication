@model IEnumerable<SampleApp.Entity.Models.Teacher>;
@{
    ViewData["Title"] = "ShowAllTeacherDetails";
}

<h1>All Teacher Details</h1>
<hr />

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Select
            <th>Teacher Id
            <th>Name
            <th>Skills
            <th>Total Students
            <th>Salary
            <th>Added On
            <th>Edit
            <th>Delete
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><input type="checkbox" /></td>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Skills</td>
                <td>@item.TotalStudents</td>
                <td>@item.Salary</td>
                <td>@item.AddedOn</td>
                <td><a asp-controller="Teacher" asp-action="Edit" asp-route-Id=@item.Id>Edit</a></td>
                <td><a asp-controller="Teacher" asp-action="Delete" asp-route-Id=@item.Id>Delete</a></td>
            </tr>
        }
    </tbody>
</table>
<hr />
<a asp-controller="Teacher" asp-action="AddTeacher" >Add Teacher</a>
<hr />

